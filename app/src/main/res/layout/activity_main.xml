<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="45sp"
            android:textStyle="bold"
            android:layout_marginBottom="55dp"
            android:text="Inwento App" />

        <Button
            android:id="@+id/btn_inventory"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:padding="10dp"
            android:textSize="25sp"
            android:gravity="center"
            android:text="Inventaryzacja" />

        <Button
            android:id="@+id/btn_scrap"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:padding="10dp"
            android:textSize="25sp"
            android:gravity="center"
            android:text="Umożenie" />

        <Button
            android:id="@+id/btn_moved"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:padding="10dp"
            android:textSize="25sp"
            android:gravity="center"
            android:text="Przesunięcie" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btn_settings"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ic_settings"
            android:scaleType="fitCenter"
            android:gravity="center"
            android:padding="15dp"
            android:contentDescription="TODO" />


        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ic_home_page"
            android:scaleType="fitCenter"
            android:gravity="center"
            android:padding="15dp"
            android:contentDescription="TODO" />

        <ImageButton
            android:id="@+id/btn_search"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ic_search"
            android:scaleType="fitCenter"
            android:padding="15dp"
            android:gravity="center"
            android:contentDescription="TODO" />
    </LinearLayout>

</LinearLayout>